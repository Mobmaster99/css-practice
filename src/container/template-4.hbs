<header class="header">
	<div>
		{{> logo}}
	</div>
	<nav class="header_nav">
		<div class="header_nav_right">
			{{> nav list=header}}
		</div>
	</nav>
</header>

<main class="main">
	{{#with main}}
	<img src="{{image}}" alt="Main image" class="main_image">
	<div class="main_content">
		<h1 class="main_title">{{heading}}</h1>
		<div class="main_description">{{description}}</div>
		<a href="{{href}}" class="button main_button">{{button}}</a>
	</div>
	{{/with}}
</main>

<div class="featured">
	{{#each featured}}
	{{> cardFeatured data=this}}
	{{/each}}
</div>

<div class="actions">
	{{#each actions}}
	<div class="actions_form">
		<div class="actions_heading">{{heading}}</div>
		<a href="{{url}}" class="actions_button">{{text}}</a>
	</div>
	{{/each}}
</div>

<footer class="footer">
	<div>
		{{> logo}}
		<span class="foter_copyright">Copyright 2023-2024</span>
	</div>
	{{#each footer}}
	<div>
		<span class="footer_title">{{title}}</span>
		{{> nav list=links isVertical=true}}
	</div>
	{{/each}}
</footer>